<h3>Create a User</h3>
<%= form_for @user, url: create_user_path do |f| %>
  <label for="name">FirstName</label>
  <%= f.text_field :first_name, placeholder: "firstname" %><br>
  <label for="name">LastName</label>
  <%= f.text_field :last_name, placeholder: "lastname" %><br>
  <label for="name">Email</label>
  <%= f.text_field :email, placeholder: "email" %><br>
  <label for="name">DateofBirth</label>
  <%= f.date_field :date_if_birth, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %> <br>
  <%= f.submit %>
<% end %>
